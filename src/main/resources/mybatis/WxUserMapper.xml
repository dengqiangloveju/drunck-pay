<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.drunck.mapper.WxUserMapper">
	<resultMap id="BaseResultMap" type="com.drunck.domain.WxUser">
		<id column="id" property="id" jdbcType="VARCHAR" />
		<result column="openid" property="openid" jdbcType="VARCHAR" />
		<result column="nickname" property="nickname" jdbcType="VARCHAR" />
		<result column="sex" property="sex" jdbcType="CHAR" />
		<result column="country" property="country" jdbcType="VARCHAR" />
		<result column="province" property="province" jdbcType="VARCHAR" />
		<result column="city" property="city" jdbcType="VARCHAR" />
		<result column="headimgurl" property="headimgurl" jdbcType="VARCHAR" />
		<result column="subscribe" property="subscribe" jdbcType="BIT" />
		<result column="subscribe_time" property="subscribeTime" jdbcType="TIMESTAMP" />
		<result column="remark" property="remark" jdbcType="VARCHAR" />
		<result column="subscribe_scene" property="subscribeScene" jdbcType="VARCHAR" />
	</resultMap>
	<sql id="Base_Column_List">
		id, openid, nickname, sex, country, province, city, headimgurl, 
		subscribe, subscribe_time, remark, subscribe_scene
	</sql>
	
	<select id="queryByOpenid" parameterType="java.lang.String" resultMap="BaseResultMap">
		SELECT 
		<include refid="Base_Column_List"/> 
		FROM wx_user where openid=#{openId} 
	</select>
</mapper>